$width = 600px

.root
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.5)
  background: rgba(20, 25, 30, 1.0)
  color: white

.header
  padding: 20px 15px

.activityName
  font-size: 20px
  font-weight: 400
  margin: 0
  line-height: 1

  display: flex

.name
  flex-grow: 1

.count
  font-size: .8em
  cursor: pointer

.description
  font-size: 1em
  opacity: .8
  margin-bottom: 0

.itemList
  padding: 15px

.aspectImageWrapper
  position: relative
  padding-bottom: 56.25%

.aspectImage
  width: 100%
  position: absolute
  top: 0
  right: 0
  left: 0
  bottom: 0
  z-index: 1

.imageHeader
  position: absolute
  bottom: 0
  left: 0
  right: 0
  z-index: 2
  padding: 30px 10px 10px 10px
  background: linear-gradient(to top, rgba(#090B0E, .75), rgba(#090B0E, 0))

  & .activityName
    font-size: 22px

.typeStory .header,
.typeStory .itemHeader,
.typeQuest .header,
.typeQuest .itemHeader
  background: rgb(212, 110, 55) !important

.typeExplore .header,
.typeExplore .itemHeader
  background: rgba(80,124,65,1) !important

.typeRaid .header,
.typeRaid .itemHeader,
.typeArena .header,
.typeArena .itemHeader
  background: rgba(82,119,181,1) !important

.typePvp .header,
.typePvp .itemHeader
  background: rgba(159,52,47,1) !important

.typeMisc .header,
.typeMisc .itemHeader
  background: lighten(rgba(20, 25, 30, 1.0), 10%) !important

.typeStrike .header,
.typeStrike .itemHeader,
.typeNightfall .header,
.typeNightfall .itemHeader
  background: rgba(85,124,190,1) !important
